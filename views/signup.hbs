<h1>Crie uma nova conta</h1>

<form class="container" action="/signup" method="post">
  <div>
    <input type="text" name="userName" placeholder="Nome Completo">
    {{#if userNameErrors}}
      {{#each userNameErrors}}
        <span class="warning">{{this}}</span>
      {{/each}}
    {{/if}}
  </div>

  <div>
    <input type="text" name="userNickname" placeholder="Apelido">
    {{#if userNicknameErrors}}
      <span class="warning">{{userNicknameErrors.[0]}}</span>
    {{/if}}
  </div>

  <div>
    <input type="text" name="userEmail" placeholder="E-mail">
    {{#if userEmailErrors}}
      <span class="warning">{{userEmailErrors.[0]}}</span>
    {{/if}}
  </div>

  <div>
    <input type="password" name="userPassword" placeholder="Senha">
    {{#if userPasswordErrors}}
      <span class="warning">{{userPasswordErrors.[0]}}</span>
    {{/if}}
  </div>

  <button type="submit" class="btn btn-primary mb-2">Efetuar cadastro</button>
</form>
